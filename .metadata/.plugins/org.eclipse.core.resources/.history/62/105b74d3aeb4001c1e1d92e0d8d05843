package com.bvr;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

@RestController
@RequestMapping("/admissions")
public class AdmissionsResource {

	public AdmissionsResource() {
		// TODO Auto-generated constructor stub
	}
	
	@Autowired
	private RestTemplate restTemplate;
	
	
	
	@RequestMapping("/physicians")
	public EmployeeList getPhysicians() {
		EmployeeList physicians = restTemplate.getForObject("", EmployeeList.class);
		
	}
	
	
	@RequestMapping("/diseases")
	public DiseaseList getDiseases() {
		DiseaseList diseases = restTemplate.getForObject("", DiseaseList.class);
	}
	
	

}
